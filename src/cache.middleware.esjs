const modoDesarrollo = import.meta.env.MODE == 'development'

exportar funcion cache(minutos) {
	const tiempoEnSegundos = 60 * minutos

	retornar (req, res, next) => {
		// Sólo cacheamos los GET
		si (req.method == 'GET' && !modoDesarrollo) {
			res.set('Cache-control', `public, s-maxage=${tiempoEnSegundos}`)
		} sino {
			// No cacheamos los demás métodos
			res.set('Cache-control', `no-store`)
		}

		// Continuamos
		next()
	}
}
