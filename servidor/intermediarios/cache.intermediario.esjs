const modoDesarrollo = falso && importar.meta.env.MODE == 'development'

exportar funcion cache(minutos) {
  const tiempoEnSegundos = 60 * minutos

  retornar (peticion, respuesta, siguiente) => {
    si (peticion.method == 'GET' && !modoDesarrollo) {
      respuesta.establecer('Cache-control', `public, s-maxage=${tiempoEnSegundos}`)
    } sino {
      respuesta.establecer('Cache-control', `no-store`)
    }

    siguiente()
  }
}
