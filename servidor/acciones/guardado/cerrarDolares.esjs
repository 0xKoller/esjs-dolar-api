importar { extraerDolares } desde '@/acciones/extraccion/extraerDolares.esjs'
importar { guardarDolares } desde '@/datos/datos.esjs'
importar { startOfDay, subHours } desde 'date-fns'
importar { zonedTimeToUtc } desde 'date-fns-tz'

exportar asincrono funcion cerrarDolares() {
  const dolares = esperar extraerDolares()

  const hoyUTC = crear Fecha()

  const hoy = zonedTimeToUtc(startOfDay(subHours(hoyUTC, 3)))

  esperar guardarDolares(dolares, hoy)
}
